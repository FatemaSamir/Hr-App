<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mark"
            android:layout_width="172dp"
            android:layout_height="125dp"
            android:layout_margin="15dp"
            android:backgroundTint="@color/orange"
            android:drawableLeft="@drawable/ic_action_check"
            android:text="Mark Attendance" />

        <Button
            android:id="@+id/history"
            android:layout_width="172dp"
            android:layout_height="125dp"
            android:layout_margin="15dp"
            android:backgroundTint="@color/rose"
            android:text="Attendance History" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button3"
            android:layout_width="172dp"
            android:layout_height="125dp"
            android:layout_margin="15dp"
            android:backgroundTint="#512D"
            android:text="Apply Leave" />

        <Button
            android:id="@+id/leave_quota"
            android:layout_width="172dp"
            android:layout_height="125dp"
            android:layout_margin="15dp"
            android:backgroundTint="#7C4DFF"
            android:text="Leave Quota" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/leave_status"
            android:layout_width="172dp"
            android:layout_height="125dp"
            android:layout_margin="15dp"
            android:backgroundTint="#F4511E"
            android:text="Leave Status" />

        <Button
            android:id="@+id/reimburse"
            android:layout_width="172dp"
            android:layout_height="123dp"
            android:layout_margin="15dp"
            android:backgroundTint="#40CAFF"
            android:text="Reimbursement" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/kyc"
            android:layout_width="172dp"
            android:layout_height="118dp"
            android:layout_margin="15dp"
            android:backgroundTint="#01579B"
            android:text="KYC documents" />

        <Button
            android:id="@+id/logout"
            android:layout_width="172dp"
            android:layout_height="118dp"
            android:layout_margin="15dp"
            android:backgroundTint="#EF9A9A"
            android:text="Logout" />


    </LinearLayout>
</LinearLayout>